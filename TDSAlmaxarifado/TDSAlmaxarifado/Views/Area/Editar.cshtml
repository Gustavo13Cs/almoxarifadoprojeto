@model TDSAlmaxarifado.Models.AREA
@{
    ViewBag.Title = "Create";
}

<h2>Editar Àrea</h2>

<div>
    <form action="/Area/Editar?id=@Model.AREID" method="post">
        <label>Descrição</label>
        <input type="text" id="descricao" name="descricao" value="@Model.AREDESCRICAO" required />
        <br />
        <br />
        <a href="/Area/index" class="btn btn-primary">Voltar</a>
        <button class="btn btn-warning" type="submit">Editar</button>
    </form>
</div>

