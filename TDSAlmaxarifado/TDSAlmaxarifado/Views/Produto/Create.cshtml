@{
    ViewBag.Title = "Create";
}

<h2>Cadastro de Produto</h2>
<div>
    <form action="/Produto/Create" method="post">
        <div class="form-group">
            <label for="descricao">Descrição</label>
            <input type="text" class="form-control"
                   maxlength="100"
                   id="descriçao" name="descricao"
                   required />
        </div>
        <div class="form-group">
            <label for="minimo">Mínimo</label>
            <input type="number" class="form-control"
                   id="minimo" name="minimo" min="0"
                   value="0"
                   required />
        </div>
        <div class="form-group">
            <label for="maximo">Máximo</label>
            <input type="number" class="form-control"
                   id="maximo" name="maximo" min="0"
                   value="0"
                   required />
        </div>
        <div class="form-group">
            <label for="estoque">Estoque Atual</label>
            <input type="number" class="form-control"
                   id="estoque" name="estoque" min="0"
                   value="0"
                   required />

        </div>
        <div>
            <a href="/Produto/Index"> <button type="button" class="btn btn-primary">Voltar</button>  </a>
            <a href="/Produto/Index"> <button type="submit" class="btn btn-success">Salvar</button>  </a>
        </div>
    </form>
</div>